<form version="1.1" theme="dark">
  <label>OCI Data Collection Health</label>
  <fieldset submitButton="false" autoRun="false">
    <input type="time" token="timerange" searchWhenChanged="true">
      <label>Time Range</label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>
  <row>
    <panel>
      <table>
        <title>Event count by type</title>
        <search>
          <query>| tstats count where `oci_index` `oci-st` by sourcetype 
| eval type=sourcetype 
| sort - count</query>
          <earliest>$timerange.earliest$</earliest>
          <latest>$timerange.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
        <format type="color" field="count">
          <colorPalette type="minMidMax" maxColor="#118832" minColor="#FFFFFF"></colorPalette>
          <scale type="minMidMax"></scale>
        </format>
      </table>
    </panel>
    <panel>
      <single>
        <title>Flow Log Event Count Trends</title>
        <search>
          <query>|tstats count where `oci_index` `oci-st` AND sourcetype=oci:com.oraclecloud.vcn* by _time,sourcetype|eval type=sourcetype | timechart sum(count) as count by type</query>
          <earliest>$timerange.earliest$</earliest>
          <latest>$timerange.latest$</latest>
        </search>
        <option name="height">362</option>
        <option name="refresh.display">progressbar</option>
        <option name="trellis.enabled">1</option>
        <option name="trellis.scales.shared">1</option>
        <option name="trellis.size">large</option>
      </single>
    </panel>
  </row>
  <row>
    <panel>
      <chart>
        <title>OCI Streaming TA Errors</title>
        <search>
          <query>index=_internal OCI ERROR NOT sourcetype IN ( splunkd_access,splunk_web_access,splunkd_remote_searches,splunkd_ui_access ) AND NOT (sourcetype=scheduler AND log_level=INFO)  | timechart count| sort -_time</query>
          <earliest>$timerange.earliest$</earliest>
          <latest>$timerange.latest$</latest>
        </search>
        <option name="charting.chart">column</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="charting.drilldown">all</option>
        <option name="height">250</option>
        <drilldown>
          <link target="_blank">search?q=index%3D_internal%20OCI%20ERROR%20NOT%20sourcetype%20IN%20(%20splunkd_access%2Csplunk_web_access%2Csplunkd_remote_searches%2Csplunkd_ui_access%20)%20AND%20NOT%20(sourcetype%3Dscheduler%20AND%20log_level%3DINFO)&amp;earliest=$timerange.earliest$&amp;latest=$timerange.latest$</link>
        </drilldown>
      </chart>
    </panel>
  </row>
</form>
